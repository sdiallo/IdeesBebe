#conversations
  %h2
    = "Personne(s) intéressée(s) par #{@product.name}"
  .ui.grid.two.column.stackable
    - @messages.each do |message|
      .column
        .ui.segment.index-user
          .ui.grid
            .fourteen.wide.column
              - name = message.from_owner? ? 'vous-même' : message.sender .username
              = "Dernier message, envoyé par #{name} :"
              %p
                = message.content
            .two.wide.column
              - user = message.from_owner? ? message.receiver : message.sender 
              .ui.vertical.buttons
                .ui.icon.button.ban.starpop{ 'data-content' => I18n.t('tooltip.messages.index.close', username: user.username), 'data-variation' => 'inverted' }
                  %i.icon.ban.circle
                .ui.icon.button.messages.starpop{ 'data-content' => I18n.t('tooltip.messages.index.chat', username: user.username), 'data-variation' => 'inverted' }
                  = link_to product_message_path(product_id: @product.slug, id: user.slug) do
                    %i.icon.chat
                .ui.icon.button.check.starpop{ 'data-content' => I18n.t('tooltip.messages.index.done', username: user.username), 'data-variation' => 'inverted' }
                  %i.icon.checkmark
          .ui.bottom.attached.label
            %span
              = user.username
            %span.right
              - if message.from_owner?
                0 message en attente
              - else
                1 message en attente
